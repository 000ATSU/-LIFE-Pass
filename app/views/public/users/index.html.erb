<div class=".container">
  <div class="row mt-5 ml-5">
    <div class="mr-5">
      <h1><%= @user.user_name %>さん のマイページ</h1>
    </div>
    <div class="mr-5 d-flex align-items-end">
      <h3>投稿数 <%= @user.posts.count %>📬</h3>
    </div>
    <div class="mr-5 d-flex align-items-end">
      <h3>いいね <%= @get_favorite.count %>💕</h3>
    </div>
    <div class="d-flex align-items-end">
    <% if current_user == @user %>
      <%= link_to "ブックマーク一覧へ", user_path(@user.id), class: "btn btn-primary btn-lg" %>
    <% end %>
    </div>
  </div>
  <div class="row mt-5 justify-content-center">
  <% @posts.each do |post| %>
    <div class="card col-3 mx-5 mt-3 flex-wrap shadow-lg" style="width: 18rem;">
      <div class="card-body">
        <h3 class="card-title text-secondary"><%= post.post_title %></h3>
        <p class="card-text text-secondary lead"><%= post.post_text.truncate(10) %>...</p>
         <%= link_to "もっと見る",  post_path(post.id), class:"btn btn-primary" %>
      </div>
    </div>
  <% end %>
  </div>
</div>

