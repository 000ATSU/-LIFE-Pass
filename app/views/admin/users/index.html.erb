<div class=".container">
  <% @users.each do |user| %>
  <div class="row justify-content-center mt-3 mx-3 alert alert-secondary">
    <div class="mr-3">
      <h4>ユーザーネーム</h4>
    </div>
    <div class="mr-3">
      <h4>
        <%= link_to admin_user_path(user.id) do %>
          <%= user.user_name %>
        <% end %>
      </h4>
    </div>
    <div class="mr-3">
      <h4>最終ログイン</h4>
    </div>
    <div class="mr-3">
      <h4>
        <%= l user.last_sign_in_at, format: :short %>
      </h4>
    </div>
    <div class="mr-3">
      <h4>投稿数</h4>
    </div>
    <div class="mr-3">
      <h4>
        <%= user.posts.count %>
      </h4>
    </div>
    <div class="mr-3">
      <h4>アカウント作成日時</h4>
    </div>
    <div class="mr-3">
      <h4>
        <%= l user.created_at, format: :short %>
      </h4>
    </div>
  </div>
  <% end %>
  <div class="row fixed-bottom">
    <div class="mx-auto mb-3 pagination pagination-lg">
      <%= paginate @users %>
    </div>
  </div>
</div>


